<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group3.smartshop.SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText android:id="@+id/edit_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edit_message"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_nearby"
            android:onClick="searchNearby"
            android:id="@+id/button_nearby"
            android:layout_alignBaseline="@+id/button_online"
            android:layout_alignBottom="@+id/button_online"
            android:layout_toLeftOf="@+id/button_online"
            android:layout_toStartOf="@+id/button_online" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_online"
            android:onClick="searchOnline"
            android:layout_marginRight="47dp"
            android:layout_marginEnd="47dp"
            android:id="@+id/button_online"
            android:layout_below="@+id/edit_message"
            android:layout_alignRight="@+id/edit_message"
            android:layout_alignEnd="@+id/edit_message" />



    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_test"
        android:onClick="loginButton"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:id="@+id/login"
        android:layout_below="@+id/edit_message"
        android:layout_alignRight="@+id/edit_message"
        android:layout_alignEnd="@+id/edit_message" />
</FrameLayout>
